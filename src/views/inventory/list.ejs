<div class="bg-white rounded-lg shadow-md p-6">
    <div class="flex justify-between items-center mb-6">
        <div class="flex items-center space-x-4">
            <h1 class="text-2xl font-bold text-gray-800">Medicine Inventory</h1>
            <form action="/medicines/initialize-november-2024" method="POST" class="inline">
                <button type="submit" 
                        class="bg-yellow-500 text-white py-2 px-4 rounded-md hover:bg-yellow-600 focus:outline-none focus:ring-2 focus:ring-yellow-500 focus:ring-offset-2"
                        onclick="return confirm('This will reset all stocks to 100 for November 2024. Are you sure?')">
                    Initialize Nov 2024 Stocks
                </button>
            </form>
        </div>
        <a href="/inventory/add" 
           class="bg-blue-500 text-white py-2 px-4 rounded-md hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2">
            Add Medicine
        </a>
    </div>

    <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Unit</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Expiry Date</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Previous Balance</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Current Stock</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                <% if (medicines && medicines.length > 0) { %>
                    <% medicines.forEach(function(medicine) { %>
                        <tr>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= medicine.name %></td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= medicine.unit %></td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= medicine.expiry_date %></td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                <%= medicine.previous_balance %>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                <span class="<%= medicine.current_stock <= 10 ? 'text-red-600 font-semibold' : '' %>">
                                    <%= medicine.current_stock %>
                                    <% if (medicine.replenished_stock > 0) { %>
                                        (+<%= medicine.replenished_stock %>)
                                    <% } %>
                                </span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                <form action="/inventory/update-stock" method="POST" class="inline-flex items-center space-x-2">
                                    <input type="hidden" name="id" value="<%= medicine.id %>">
                                    <input type="number" name="quantity" required
                                        class="w-20 rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500"
                                        placeholder="Qty">
                                    <button type="submit"
                                        class="bg-green-500 text-white py-1 px-2 rounded-md hover:bg-green-600 text-xs">
                                        Add Stock
                                    </button>
                                </form>
                            </td>
                        </tr>
                    <% }); %>
                <% } else { %>
                    <tr>
                        <td colspan="6" class="px-6 py-4 text-center text-sm text-gray-500">No medicines found</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</div> 