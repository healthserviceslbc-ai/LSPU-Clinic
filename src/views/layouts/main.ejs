                <div class="flex justify-between items-center mb-2">
                    <h1 class="text-2xl font-bold text-gray-900">Welcome to the University Clinic Inventory System!</h1>
                    <button onclick="closeWelcomeModal()" class="text-gray-500 hover:text-gray-700 ml-4">
                        <i class="fas fa-times text-xl"></i>
                    </button>
                </div>
                <p class="text-gray-600">Streamline your clinic's inventory management with our comprehensive system.</p>
            </div>

            <!-- Tabs -->
            <div class="mb-6">
                <div class="bg-gray-200 rounded-lg p-1">
                    <div class="flex w-full" role="tablist">
                        <button onclick="switchTab('features')" 
                                id="featuresTab"
                                class="flex-1 px-3 py-1.5 text-sm font-medium rounded-md transition-colors tab-button tab-active"
                                role="tab">
                            Features
                        </button>
                        <button onclick="switchTab('benefits')" 
                                id="benefitsTab"
                                class="flex-1 px-3 py-1.5 text-sm font-medium rounded-md transition-colors tab-button"
                                role="tab">
                            Benefits
                        </button>
                    </div>
                </div>

                <!-- Features Content -->
                <div id="featuresContent" class="p-4 bg-gray-50 rounded-lg mt-4">
                    <h2 class="text-lg font-semibold mb-2">Key Features</h2>
                    <p class="text-gray-600 mb-4">Discover what our system can do for you</p>
                    <ul class="space-y-3">
                        <li class="flex items-center">
                            <i class="fas fa-clipboard-list text-blue-500 mr-3"></i>
                            <span>Real-time inventory tracking</span>
                        </li>
                        <li class="flex items-center">
                            <i class="fas fa-file-alt text-green-500 mr-3"></i>
                            <span>Automated reports</span>
                        </li>
                        <li class="flex items-center">
                            <i class="fas fa-bell text-red-500 mr-3"></i>
                            <span>Low stock alerts</span>
                        </li>
                        <li class="flex items-center">
                            <i class="fas fa-search text-purple-500 mr-3"></i>
                            <span>Advanced search functionality</span>
                        </li>
                    </ul>
                </div>

