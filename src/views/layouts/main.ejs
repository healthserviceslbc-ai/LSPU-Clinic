<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= typeof title !== 'undefined' ? title : 'LSPU Medicine Inventory' %></title>
    <link rel="icon" type="image/x-icon" href="/favicon.ico">
    <link rel="shortcut icon" type="image/x-icon" href="/favicon.ico">
    <script src="//unpkg.com/alpinejs" defer></script>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <style>
        [x-cloak] { 
            display: none !important; 
        }
        .dropdown-hidden {
            display: none !important;
            opacity: 0 !important;
            pointer-events: none !important;
        }
        .tab-button {
            background-color: transparent;
        }
        .tab-active {
            background-color: white;
            color: rgb(59, 130, 246);
            font-weight: 500;
            box-shadow: 0 1px 2px rgba(0, 0, 0, 0.05);
        }
        #loginSuccessNotification {
            transition: transform 0.3s ease-in-out;
        }
        #loginSuccessNotification.translate-x-full {
            transform: translateX(100%);
        }
    </style>
    <script>
        // Initialize Alpine.js data before DOM loads
        window.addEventListener('DOMContentLoaded', () => {
            Alpine.store('navigation', {
                dropdownOpen: false
            });
        });

        // Handle page transitions
        document.addEventListener('visibilitychange', () => {
            if (document.visibilityState === 'hidden') {
                Alpine.store('navigation').dropdownOpen = false;
            }
        });

        // Force close dropdown on navigation
        window.addEventListener('beforeunload', () => {
            const dropdownEl = document.querySelector('[x-show="open"]');
            if (dropdownEl) {
                dropdownEl.classList.add('dropdown-hidden');
            }
        });
    </script>
    <%- typeof style !== 'undefined' ? style : '' %>
</head>
<body class="bg-gray-100 min-h-screen flex flex-col">
    <!-- Navigation -->
    <nav class="bg-blue-600 text-white shadow-lg" data-logged-in="<%= typeof user !== 'undefined' && user !== null %>">
        <div class="container mx-auto px-6 py-3 max-w-[97%]">
            <div class="flex items-center justify-between">
                <div class="text-xl font-semibold">
                    LSPU Medicine Inventory
                </div>
                <% if (typeof user !== 'undefined' && user !== null) { %>
                <div class="flex items-center space-x-6">
                    <div class="space-x-4">
                        <a href="/" class="hover:text-blue-200 <%= typeof page !== 'undefined' && page === 'home' ? 'text-blue-200' : '' %>">
                            <i class="fas fa-home mr-1"></i>
                            Home
                        </a>
                        <a href="/transactions" class="hover:text-blue-200 <%= typeof page !== 'undefined' && page === 'transactions' ? 'text-blue-200' : '' %>">
                            <i class="fas fa-exchange-alt mr-1"></i>
                            Transactions
                        </a>
                        <a href="/reports/monthly" class="hover:text-blue-200 <%= typeof page !== 'undefined' && page === 'reports' ? 'text-blue-200' : '' %>">
                            <i class="fas fa-boxes mr-1"></i>
                            Inventory
                        </a>
                        <% if (locals.isAdmin) { %>
                            <a href="/users" class="hover:text-blue-200 <%= typeof page !== 'undefined' && page === 'users' ? 'text-blue-200' : '' %>">
                                <i class="fas fa-users-cog mr-1"></i>
                                User Management
                            </a>
                        <% } %>
                    </div>
                    <% if (locals.user) { %>
                        <div class="flex items-center space-x-4 border-l pl-4">
                            <div x-data="{ open: false }" 
                                 @keydown.escape.window="open = false" 
                                 @click.away="open = false"
                                 @beforeunload.window="open = false"
                                 class="relative">
                                <button @click="open = !open" 
                                        @click.away="open = false"
                                        class="flex items-center space-x-2 hover:text-blue-200">
                                    <i class="fas fa-user-circle text-xl"></i>
                                    <span class="text-sm"><%= locals.user.full_name %></span>
                                    <% if (locals.isAdmin) { %>
                                        <span class="ml-2 px-2 py-1 text-xs bg-purple-500 rounded-full">Admin</span>
                                    <% } %>
                                    <i class="fas fa-chevron-down text-xs ml-1"></i>
                                </button>
                                
                                <!-- Dropdown Menu -->
                                <div x-show="open" 
                                     x-cloak
                                     @click.away="open = false"
                                     x-transition:enter="transition ease-out duration-100"
                                     x-transition:enter-start="transform opacity-0 scale-95"
                                     x-transition:enter-end="transform opacity-100 scale-100"
                                     x-transition:leave="transition ease-in duration-75"
                                     x-transition:leave-start="transform opacity-100 scale-100"
                                     x-transition:leave-end="transform opacity-0 scale-95"
                                     class="absolute right-0 mt-2 w-48 rounded-md shadow-lg bg-white ring-1 ring-black ring-opacity-5 z-50 dropdown-menu"
                                     :class="{ 'dropdown-hidden': !open }">
                                    <div class="py-1">
                                        <a href="/users/profile" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">
                                            <i class="fas fa-user-cog mr-2"></i>
                                            Manage Account
                                        </a>
                                        <button onclick="showLogoutConfirmation()" class="w-full text-left px-4 py-2 text-sm text-red-600 hover:bg-gray-100">
                                            <i class="fas fa-sign-out-alt mr-2"></i>
                                            Logout
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% } %>
                </div>
                <% } %>
            </div>
        </div>
    </nav>

    <!-- Flash Messages -->
    <% if (locals.success && locals.success.length > 0) { %>
        <div class="fixed top-4 right-4 bg-green-500 text-white px-4 py-2 rounded shadow-lg z-50" id="successMessage">
            <div class="flex items-center">
                <i class="fas fa-check-circle mr-2"></i>
                <%= locals.success %>
            </div>
        </div>
        <script>
            setTimeout(() => {
                const successMessage = document.getElementById('successMessage');
                if (successMessage) {
                    successMessage.style.opacity = '0';
                    successMessage.style.transition = 'opacity 0.5s ease-in-out';
                    setTimeout(() => successMessage.remove(), 500);
                }
            }, 3000);
        </script>
    <% } %>

    <% if (locals.error && locals.error.length > 0) { %>
        <div class="fixed top-4 right-4 bg-red-500 text-white px-4 py-2 rounded shadow-lg z-50" id="errorMessage">
            <div class="flex items-center">
                <i class="fas fa-exclamation-circle mr-2"></i>
                <%= locals.error %>
            </div>
        </div>
        <script>
            setTimeout(() => {
                const errorMessage = document.getElementById('errorMessage');
                if (errorMessage) {
                    errorMessage.style.opacity = '0';
                    errorMessage.style.transition = 'opacity 0.5s ease-in-out';
                    setTimeout(() => errorMessage.remove(), 500);
                }
            }, 3000);
        </script>
    <% } %>

    <!-- Login Success Notification -->
    <div id="loginSuccessNotification" class="fixed top-4 right-4 bg-green-500 text-white px-4 py-3 rounded-lg shadow-lg z-[10000] hidden transform transition-transform duration-300 translate-x-full">
        <div class="flex items-center">
            <i class="fas fa-check-circle mr-2"></i>
            <span>Login successful!</span>
        </div>
    </div>

    <!-- Logout Confirmation Modal -->
    <div id="logoutConfirmModal" class="fixed inset-0 bg-gray-600 bg-opacity-50 hidden overflow-y-auto h-full w-full z-[9999]">
        <div class="relative top-20 mx-auto p-5 border w-96 shadow-lg rounded-md bg-white">
            <div class="mt-3">
                <h3 class="text-lg font-medium leading-6 text-gray-900">Confirm Logout</h3>
                <div class="mt-4">
                    <p class="text-gray-700">Are you sure you want to logout?</p>
                    <div class="flex justify-end mt-6">
                        <button onclick="closeLogoutConfirmation()" class="bg-gray-500 text-white px-4 py-2 rounded-lg mr-2 hover:bg-gray-600 flex items-center">
                            <i class="fas fa-times mr-1"></i>
                            Cancel
                        </button>
                        <a href="/auth/logout" class="bg-red-500 text-white px-4 py-2 rounded-lg hover:bg-red-600 flex items-center">
                            <i class="fas fa-sign-out-alt mr-1"></i>
                            Logout
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

