    <!-- Base Scripts -->
    <!-- Remove Alpine.js from here since we moved it to head -->
    
    <!-- Page-specific scripts -->
    <%- typeof script !== 'undefined' ? script : '' %>

    <script>
        function showLogoutConfirmation() {
            document.getElementById('logoutConfirmModal').classList.remove('hidden');
        }

        function closeLogoutConfirmation() {
            document.getElementById('logoutConfirmModal').classList.add('hidden');
        }

        function showWelcomeModal() {
            const modal = document.getElementById('welcomeModal');
            if (!modal) return;
            
            // Check if this is a fresh login
            const isNewLogin = sessionStorage.getItem('newLogin');
            const hasSeenModal = localStorage.getItem('hideWelcomeModal') === 'true';
            
            console.log('isNewLogin:', isNewLogin); // Debug log
            console.log('hasSeenModal:', hasSeenModal); // Debug log
            
            // Show modal if it's a new login and user hasn't chosen to hide it
            if (isNewLogin === 'true' && !hasSeenModal) {
                modal.classList.remove('hidden');
            }
        }

        function closeWelcomeModal() {
            const modal = document.getElementById('welcomeModal');
            const doNotShowAgain = document.getElementById('doNotShowAgain');
            
            // Save preference if "Do not show again" is checked
            if (doNotShowAgain.checked) {
                localStorage.setItem('hideWelcomeModal', 'true');
            } else {
                localStorage.removeItem('hideWelcomeModal'); // Remove the item if unchecked
            }
            
            // Hide modal with fade effect
            modal.style.opacity = '0';
            modal.style.transition = 'opacity 0.3s ease-in-out';
            
            setTimeout(() => {
                modal.classList.add('hidden');
                modal.style.opacity = '1';
            }, 300);
        }

        function showLoginSuccessNotification() {
            const notification = document.getElementById('loginSuccessNotification');
            notification.classList.remove('hidden');
            // Allow DOM to process the removal of hidden class
            setTimeout(() => {
                notification.classList.remove('translate-x-full');
            }, 100);

            // Hide notification after 3 seconds
            setTimeout(() => {
                notification.classList.add('translate-x-full');
                setTimeout(() => {
                    notification.classList.add('hidden');
                }, 300);
            }, 3000);
        }

        // Show welcome modal and login notification when page loads
        document.addEventListener('DOMContentLoaded', function() {
            const isLoggedIn = document.querySelector('[data-logged-in="true"]');
            console.log('isLoggedIn:', isLoggedIn); // Debug log
            
            if (isLoggedIn) {
                const isNewLogin = sessionStorage.getItem('newLogin');
                console.log('DOMContentLoaded isNewLogin:', isNewLogin); // Debug log
                
                if (isNewLogin === 'true') {
                    showLoginSuccessNotification();
                    showWelcomeModal();
                    // Clear the new login flag after showing both
                    sessionStorage.removeItem('newLogin');
                }
            }
        });

        function switchTab(tabName) {
            // Update tab buttons
            document.getElementById('featuresTab').classList.remove('tab-active');
            document.getElementById('benefitsTab').classList.remove('tab-active');
            document.getElementById(tabName + 'Tab').classList.add('tab-active');

            // Update content visibility
            document.getElementById('featuresContent').classList.add('hidden');
            document.getElementById('benefitsContent').classList.add('hidden');
            document.getElementById(tabName + 'Content').classList.remove('hidden');
        }

        function toggleTreatmentType() {
            const medicationSection = document.getElementById('medicationSection');
            const treatmentSection = document.getElementById('treatmentSection');
            const treatmentType = document.querySelector('input[name="treatmentType"]:checked').value;
            const selectedMedication = document.getElementById('selectedMedication');
            const quantityInput = document.getElementById('quantityInput');
            const medicationSearch = document.getElementById('medicationSearch');

            if (treatmentType === 'medication') {
                medicationSection.classList.remove('hidden');
                treatmentSection.classList.add('hidden');
                document.getElementById('treatmentText').value = ''; // Clear treatment text
            } else {
                medicationSection.classList.add('hidden');
                treatmentSection.classList.remove('hidden');
                // Clear medication-related fields
                selectedMedication.value = '';
                quantityInput.value = '0';
                medicationSearch.value = '';
                document.getElementById('selectedMedicationInfo').classList.add('hidden');
            }
        }

        // Modify the form submission handler
        const newTransactionForm = document.getElementById('newTransactionForm');
        if (newTransactionForm) {
            // Remove any existing event listeners
            const newHandler = newTransactionForm.cloneNode(true);
            newTransactionForm.parentNode.replaceChild(newHandler, newTransactionForm);
            
            // Add the event listener
            newHandler.addEventListener('submit', async function(e) {
                e.preventDefault();
                
                const submitButton = this.querySelector('button[type="submit"]');
                const originalContent = submitButton.innerHTML;
                
                try {
                    submitButton.disabled = true;
                    submitButton.innerHTML = `
                        <svg class="animate-spin h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                        </svg>
                        Creating...
                    `;

                    const formData = new FormData(this);
                    const data = Object.fromEntries(formData.entries());
                    const treatmentType = document.querySelector('input[name="treatmentType"]:checked').value;

                    console.log('Form data before processing:', data);  // Log initial form data
                    console.log('Treatment type:', treatmentType);      // Log treatment type

                    if (treatmentType === 'treatment') {
                        // For treatment type, combine treatment text with remarks
                        const treatmentText = document.getElementById('treatmentText').value;
                        const existingRemarks = document.getElementById('remarksInput').value;
                        
                        console.log('Treatment text:', treatmentText);    // Log treatment text
                        console.log('Existing remarks:', existingRemarks); // Log existing remarks
                        
                        // Set medication to empty string and quantity to 0 for treatment-only transactions
                        data.medication = '';  // Changed from null to empty string
                        data.quantity = 0;
                        
                        // Combine treatment text with existing remarks
                        data.remarks = `Treatment/Advice: ${treatmentText}${existingRemarks ? '\n\nAdditional Remarks: ' + existingRemarks : ''}`;
                        
                        console.log('Final data for treatment:', data);  // Log final data
                    }

                    console.log('Data being sent to server:', data);  // Log data before sending

                    const response = await fetch('/transactions', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'Accept': 'application/json'
                        },
                        credentials: 'same-origin',
                        body: JSON.stringify(data)
                    });

                    if (!response.ok) {
                        const contentType = response.headers.get('content-type');
                        if (contentType && contentType.includes('application/json')) {
                            const errorData = await response.json();
                            throw new Error(errorData.error || 'Failed to create transaction');
                        } else {
                            throw new Error('You must be logged in to create a transaction');
                        }
                    }

                    const result = await response.json();

                    if (result.success) {
                        closeNewTransactionModal();
                        window.location.reload();
                        const url = new URL(window.location);
                        url.searchParams.set('notification', 'Transaction created successfully');
                        url.searchParams.set('notificationType', 'success');
                        window.location.href = url.toString();
                    } else {
                        throw new Error(result.error || 'Failed to create transaction');
                    }
                } catch (error) {
                    console.error('Error:', error);
                    showNotification(error.message, 'error');
                    submitButton.disabled = false;
                    submitButton.innerHTML = originalContent;
                }
            });
        }
    </script>
